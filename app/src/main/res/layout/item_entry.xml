<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_3sdp"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        >


    <TextView
        android:id="@+id/txtPerson"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Identificativo persona"
        android:textColor="@color/white"
        android:background="@color/back_color"
        android:padding="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/txtDate"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Data rifornimento"
        android:textColor="@color/white"
        android:background="@color/back_color"
        android:padding="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/txtTime"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="Ora rifornimento"
        android:textColor="@color/white"
        android:background="@color/back_color"
        android:padding="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/txtLiteres"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Litri riforniti"
        android:textColor="@color/white"
        android:background="@color/back_color"
        android:padding="@dimen/_10sdp"
        />
        <TextView
            android:id="@+id/txtTotalLiteres"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Litri progressivi"
            android:textColor="@color/white"
            android:background="@color/back_color"
            android:padding="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/txtNote"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Note"
            android:textColor="@color/white"
            android:background="@color/back_color"
            android:padding="@dimen/_10sdp"
            />
    </LinearLayout>
</LinearLayout>